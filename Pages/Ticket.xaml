<Page x:Class="Airlines_Klimov.Pages.Ticket"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Airlines_Klimov.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="850"
      Title="Ticket">

    <Grid Background="#0080ff">
        <Border>
            <Grid Height="55" VerticalAlignment="Top">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Image Grid.Column="0" Source="/Images/Plane.png" HorizontalAlignment="Left" Margin="10, 5, 5, 5"/>
                <Label Grid.Column="0" Content="Управление авиалиниями" VerticalAlignment="Center" HorizontalAlignment="Left"
       Margin="65,0,0,0" FontSize="20" Foreground="White" FontWeight="Bold"/>
                <Button Grid.Column="1" Width="142" Height="35" VerticalAlignment="Center" HorizontalAlignment="Left"
        Margin="273,0,0,0" Content="Вернуться" FontSize="17" Background="White" Click="Back" FontWeight="Bold"/>
            </Grid>
        </Border>
        <Border Margin="0,55,0,0">
            <Grid Background="White">
                <ScrollViewer>
                    <StackPanel x:Name="parent" Margin="10"/>
                </ScrollViewer>
            </Grid>
        </Border>
    </Grid>
</Page>
